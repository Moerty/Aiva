<controls:MetroContentControl
    x:Class="Aiva.Bot.Views.Flyouts.HonorSongrequester"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Aiva.Bot.Views.Flyouts"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <StackPanel VerticalAlignment="Top" Orientation="Vertical">
                <TextBlock Text="Add currency to Viewer" />
                <controls:NumericUpDown Value="{Binding CurrencyToAdd}" />
            </StackPanel>
            <Separator />
            <CheckBox Content="Write added Value in Chat" IsChecked="{Binding WriteInChat}" />
        </StackPanel>
    </Grid>
</controls:MetroContentControl>
