<controls:MetroContentControl
    x:Class="Aiva.Bot.Views.Giveaway"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Aiva.Bot.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="720"
    Height="470"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="317*" />
            <RowDefinition Height="154*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="31*" />
            <ColumnDefinition Width="89*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.RowSpan="2" Grid.Column="0">
            <ListView>
                <ListView.View>
                    <GridView>
                        <GridViewColumn />
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>

        <Grid Grid.Column="1">
            <TextBox
                Width="306"
                Height="22"
                Margin="18,11,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                controls:TextBoxHelper.Watermark="Command"
                TextWrapping="Wrap" />

            <StackPanel
                Width="90"
                Margin="0,11,10,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Orientation="Vertical">
                <TextBlock Text="Price:" />
                <controls:NumericUpDown Height="15" />
            </StackPanel>
            <ComboBox
                Width="193"
                Margin="27,87,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top" />
            <TextBlock
                Width="108"
                Margin="32,67,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Text="Join permission"
                TextWrapping="Wrap" />
            <CheckBox
                Margin="31,131,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="Must be following to win" />
            <CheckBox
                Margin="33,157,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="Notify winner in chat" />
            <CheckBox
                Margin="32,184,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="Remove winner from list" />
            <CheckBox
                Margin="34,209,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="Block re-entry of previous winners" />
            <CheckBox
                Margin="302,126,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="Timer" />
            <Slider
                Width="158"
                Margin="306,153,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top" />
            <Button
                Width="120"
                Margin="35,274,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="Start Giveaway" />
            <Button
                Width="112"
                Margin="216,274,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="Pick Winner" />
            <Button
                Width="117"
                Margin="383,271,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="Reset" />
        </Grid>

        <Grid Grid.Row="1" Grid.Column="1">
            <TextBox
                Width="512"
                Height="23"
                Margin="11,5,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                controls:TextBoxHelper.Watermark="Winner..."
                Text=""
                TextWrapping="Wrap" />
            <ListView
                Width="513"
                Height="100"
                Margin="14,36,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top">
                <ListView.View>
                    <GridView>
                        <GridViewColumn />
                    </GridView>
                </ListView.View>
            </ListView>

        </Grid>
    </Grid>
</controls:MetroContentControl>
